# Build stage
FROM node:20.11.0-alpine AS build

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy the package.json and pnpm-lock.yaml files from the scraper context
COPY ./scraper/package*.json ./pnpm-lock.yaml ./

# Install all dependencies (including devDependencies)
RUN pnpm install

# List all installed dependencies
RUN pnpm list --depth 0

# Verify that TypeScript is installed
RUN pnpm exec tsc --version

# Copy Prisma files from the root context
COPY ./prisma ./prisma/

# Copy the rest of the application files from the scraper context
COPY ./scraper .

# Generate Prisma client
RUN pnpm dlx prisma generate

RUN npx tsc

# Build the application (using the build script from package.json)
RUN pnpm run build

# Production stage
FROM node:20.11.0-alpine AS production

WORKDIR /app

# Install pnpm globally
RUN npm install -g pnpm

# Copy the package.json and pnpm-lock.yaml files from the scraper context
COPY ./scraper/package*.json ./pnpm-lock.yaml ./

# Install only production dependencies
RUN pnpm install --prod

# Copy necessary files from the build stage
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package*.json ./
COPY --from=build /app/dist ./dist

# Start the application
CMD ["node", "dist/index.js"]